@model CNPM.Models.Sale_promotion

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Layout/Layout_Voucher.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <div>Tên chương trình: </div>
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <div>Ngày bắt đầu: </div>
                    @Html.EditorFor(model => model.dateStart, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <div>Ngày kết thúc: </div>
                    @Html.EditorFor(model => model.dateEnd, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <div>Điều kiện (giá trị đơn hàng trên): </div>
                    @Html.EditorFor(model => model.condition, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <div>Mô tả: </div>
                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    <div>Phần trăm giảm: </div>
                    @Html.EditorFor(model => model.score, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
