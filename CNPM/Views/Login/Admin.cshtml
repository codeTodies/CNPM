@model CNPM.Models.Staff
@{
    ViewBag.Title = "login admin";
    Layout = null;
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="wrapper">
        @using (Html.BeginForm("LoginAdmin", "Login"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form action="">
                <h1>Đăng nhập nhân viên</h1>
                <p style="color:red;text-align:center">@ViewBag.ErrorInfos</p>
                <div class="input-box">
                    @Html.TextBox("name", null, new { @class = "form-control input_user", placeholder = "Tên đăng nhập" })
                    <i class='bx bxs-user'></i>
                    <div>
                        @Html.ValidationMessageFor(model => model.name)
                    </div>
                </div>
                <div class="input-box">
                    @Html.Password("password", null, new { @class = "form-control input_pass", placeholder = "Mật khẩu" })
                    <i class='bx bxs-lock-alt'></i>
                    <div>
                        @Html.ValidationMessageFor(model => model.password)
                    </div>
                </div>
                <button type="submit" class="btn login_btn">Đăng nhập</button>
                <div class="register-link">
                    <p>Đăng Nhập Với Tài Khoản Người Dùng ? <a href="~/Login/Login">Đăng nhập</a></p>
                </div>
            </form>
        }
    </div>
    <script>
        $('.message a').click(function () {
            $('form').animate({ height: "toggle", opacity: "toggle" }, "slow");
        });
    </script>
</body>
</html>



