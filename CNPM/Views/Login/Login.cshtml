@model CNPM.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="@Url.Content("~/Content/login.css")" rel="stylesheet" type="text/css" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        @using (Html.BeginForm("Login", "Login"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form action="">
            <h1>Đăng nhập</h1>
            <p style="color:red;text-align:center">@ViewBag.ErrorInfo</p>
            <div class="input-box">
                @Html.TextBox("name", null, new { @class = "form-control input_user", placeholder = "Tên đăng nhập" })
                <i class='bx bxs-user'></i>
                <div>
                    @Html.ValidationMessageFor(model => model.name)
                </div>
            </div>
            <div class="input-box">
                @Html.Password("password", null, new { @class = "form-control input_pass", placeholder = "Mật khẩu" })
                <i class='bx bxs-lock-alt'></i>
                <div>
                    @Html.ValidationMessageFor(model => model.password)
                </div>
            </div>
            <div style="text-align:center">
                <br />
                <button type="submit" class="btn btn-success">Đăng nhập</button>
            </div>
            <div class="register-link">
                <p>Chưa Có tài khoản ? <a href="/Login/Register">Tạo Tài Khoản</a></p>
            </div>
            <div class="register-link">
                <p>Đăng Nhập Với Tài Khoản Nhân Viên ? <a href="~/Login/Admin">Đăng nhập</a></p>
            </div>
        </form>
        }
    </div>



    <script>
        $('.message a').click(function () {
            $('form').animate({ height: "toggle", opacity: "toggle" }, "slow");
        });
    </script>

</body>
</html>

