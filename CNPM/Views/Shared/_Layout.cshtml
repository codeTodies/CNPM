<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nhà sách ABC</title>
    <link href="@Url.Content("~/Content/Styles.css")" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <header>
        <div class="topnav">
            <div class="navbtn">
                <a href="@Url.Action("Index", "Home")" class="icon-link">
                    <button type="submit">
                        <i class="fa-solid fa-house"></i>
                        <span class="sr-only">Home</span>
                    </button>
                </a>
                <div class="name">Trang chủ</div>
            </div>

            <div class="search-container">
                @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-inline" }))
                {
                    @Html.TextBox("searchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Tìm kiếm..." })
                    <button type="submit" id="search-btn" class="btn btn-primary">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                }
            </div>

            <div class="navbtn">
                <a href="@Url.Action("ShowCart", "ShoppingCart")" class="icon-link">
                    <button type="button" class="cart-btn">
                        <i class="fa-solid fa-cart-shopping"></i>
                        @Html.Action("BagCart", "ShoppingCart")
                        <span class="sr-only">Giỏ hàng</span>
                    </button>
                </a>
                <div class="name">Giỏ hàng</div>
            </div>



            @if (Session["NameUser"] == null)
            {
                <div class="navbtn">
                    <a href="@Url.Action("Login", "Login")" class="icon-link">
                        <button type="submit">
                            <i class="fa-solid fa-user"></i>
                            <span class="sr-only">Tài khoản</span>
                        </button>
                    </a>
                    <div class="name">Tài khoản</div>
                </div>
            }
            else
            {
                <div class="navbtn">
                    <a href="@Url.Action("PersonalInfo", "Users", new { id = (int)Session["IdUser"] })" class="icon-link">
                        <div>Chào mừng bạn, @Session["NameUser"]</div>
                        <span class="sr-only">Tài khoản</span>
                    </a>
                </div>
            }
        </div>
    </header>

    <div class="container-fluid">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white mt-5 p-4">
        <div class="container">
            <div class="row">
                <!-- About section -->
                <div class="col-md-4">
                    <h5>Về Nhà sách ABC</h5>
                    <p>Nhà sách ABC là nơi cung cấp sách đa dạng thể loại với chất lượng tốt nhất.</p>
                </div>

                <!-- Quick links -->
                <div class="col-md-4">
                    <h5>Liên kết nhanh</h5>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Index", "Home")" class="text-white">Trang chủ</a></li>
                        <li><a href="@Url.Action("About", "Home")" class="text-white">Về chúng tôi</a></li>
                        <li><a href="@Url.Action("Contact", "Home")" class="text-white">Liên hệ</a></li>
                        <li><a href="@Url.Action("Privacy", "Home")" class="text-white">Chính sách bảo mật</a></li>
                    </ul>
                </div>

                <!-- Contact and social media -->
                <div class="col-md-4">
                    <h5>Liên hệ</h5>
                    <p>Email: support@nhasachabc.com</p>
                    <p>Điện thoại: 123-456-7890</p>
                    <div class="social-icons">
                        <a href="#" class="text-white mr-2">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="text-white mr-2">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="text-white mr-2">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="text-white">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col text-center">
                    <p>&copy; 2024 Nhà sách ABC. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>