@model CNPM.Models.Publisher

@{
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h2 class="text-center">Xóa nhà xuất bản</h2>

    <h3 class="text-danger">Bạn có chắc chắn là bạn muốn xóa nhà xuất bản này?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên NXB
            </dt>

            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                @Html.ActionLink("Quay về danh sách", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
        @if (!string.IsNullOrEmpty(ViewBag.ErrorPublish))
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorPublish
            </div>
        }
    </div>
</body>
</html>
