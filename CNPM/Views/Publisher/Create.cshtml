@model CNPM.Models.Publisher

@{
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <h2 class="text-center">Tạo mới nhà xuất bản</h2>
    @using (Html.BeginForm("Create", "Publisher", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
    {
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        Tên nhà xuất bản:
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                    <div style="text-align:center">
                        <button type="submit" class="btn-login">Tạo mới</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Danh sách NXB", "Index")
    </div>
</body>
</html>
<script src="~/Scripts/script.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

