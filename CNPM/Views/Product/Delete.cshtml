@model CNPM.Models.Product_title

@{
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <h2 class="text-center">Xóa sản phẩm</h2>

    <h3 class="text-danger">Bạn có chắc chắn là bạn muốn xóa sản phẩm này?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                Tên sản phẩm:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>

            <dt>
                Hình ảnh sản phẩm:
            </dt>

            <dd>
                <img src="@Url.Content(Model.ImagePro)" alt="Image" width="400" height="400" />
            </dd>


            <dt>
                Tác giả:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.author)
            </dd>


            <dt>
                Thể loại:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category1.name)
            </dd>

            <dt>
                Năm xuất bản:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.publishing_year)
            </dd>

            <dt>
                Nhà xuất bản:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Publisher1.name)
            </dd>

            <dt>
                Giá bìa:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.giaBia)
            </dd>


        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                @Html.ActionLink("Quay về danh sách", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</body>
</html>
