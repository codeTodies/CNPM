@model CNPM.Models.Product_title

@{
    ViewBag.Title = "ProDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int category;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link href="~/Content/Styles.css" rel="stylesheet" />
<style>
    /* Container and Rows */
.container {
    padding: 20px;
    margin: auto;
    margin-top:2rem;
    font-family: Arial, sans-serif;
}

.row {
    display: flex;
    flex-wrap: wrap;
    margin: 20px 0;
}

.col-md-6 {
    flex: 50%;
    max-width: 50%;
    padding: 15px;
}

.card-body {
    padding: 20px;
    background: #f9f9f9;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.card-img-top {
    width: 100%;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.card-title {
    font-size: 24px;
    font-weight: bold;
    color: #333;
    margin-bottom: 15px;
}

.card-text {
    font-size: 16px;
    color: #666;
    margin-bottom: 10px;
}

/* Buttons */
.btn-login, .btn-default {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 25px;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.3s;
    margin-top: 15px;
    margin-right: 10px;
}

.btn-login {
    background-color: #ec3838;
    color: white;
}

.btn-login:hover {
    background-color: #cc0000;
    transform: scale(1.05);
}

.btn-default {
    background-color: #007bff;
    color: white;
}

.btn-default:hover {
    background-color: #0056b3;
    transform: scale(1.05);

}
    .category-heading {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
        margin-bottom: 10px;
        font-size: 24px;
        font-weight: bold;
    }

    .view-all-link {
        font-size: 14px;
        font-weight: normal;
        color: #007bff;
        text-decoration: none;
    }

        .view-all-link:hover {
            text-decoration: underline;
        }
</style>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@Url.Content(Model.ImagePro)" class="card-img-top" alt="Product Image">
            </div>
            <div class="col-md-6">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(model => model.name)</h5>
                    <p class="card-text">Năm sản xuất: @Html.DisplayFor(model => model.publishing_year)</p>
                    <p class="card-text">NXB: @Html.DisplayFor(model => model.Publisher1.name)</p>
                    <p class="card-text">Thể loại: @Html.DisplayFor(model => model.Category1.name)</p>
                    <p class="card-text">Tác giả: @Html.DisplayFor(model => model.author)</p>
                    <p class="card-text"> @Html.DisplayFor(model => model.giaBia) đ</p>
                    @{ category = Model.category ?? 0;
                        int idbook = Model.ID;}
                    <a href="/ShoppingCart/AddToCarts/@Model.ID" class="icon-link">
                        <button type="submit" class="btn-login">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <span class="sr-only">Thêm vào giỏ hàng</span>
                        </button>
                    </a>
                    <a href="/ShoppingCart/AddToCart/@Model.ID" class="icon-link">
                        <button type="submit" class="btn-default">
                            <i class="fa-solid fa-cart-shopping"></i>
                            <span class="sr-only">Mua ngay</span>
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div>
        <h3 class="category-heading">
            Các tác phẩm cùng thể loại
            @Html.ActionLink("Xem tất cả", "Index", "Home", new { category = category }, new { @class = "button" })
        </h3>
        @{ Html.RenderAction("ListByCate", "Product", new { id = category, bookID=idbook }); }
    </div>
</body>
